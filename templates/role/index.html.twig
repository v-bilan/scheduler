{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Role index</h1>
    <a href="{{ path('app_role_new') }}" class="btn btn-primary">Create new</a>
    <div class="mt-1">
        {{ pagerfanta(roles) }}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ macros.toggleOrderParams('app_role_index', 'id', 'ID') }}</th>
                <th>{{ macros.toggleOrderParams('app_role_index', 'name', 'Name') }}</a></th>
                <th>{{ macros.toggleOrderParams('app_role_index', 'priority', 'Priority') }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
