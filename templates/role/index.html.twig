{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Role index</h1>
    <a href="{{ path('app_role_new') }}" class="btn btn-primary">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'Name' | trans }}</th>
                <th>{{ 'Priority' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>{{ role.priority }}</td>
                <td>
                    <a href="{{ path('app_role_show', {'id': role.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
