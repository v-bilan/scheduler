{% extends 'base.html.twig' %}

{% import 'macros.html.twig' as macros %}

{% block title %}Vacation index{% endblock %}

{% block body %}

   {% if witness %}
         {% set params = {'id': witness.id} %}
   {% else %} 
         {% set params = {} %}
   {% endif %}
    <h1>Vacation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ macros.toggleOrderParams('app_vacation_index', 'id', 'ID', params)}} </th>
                <th>{{ macros.toggleOrderParams('app_vacation_index', 'startDate', 'Start Date', params) }}</th>
                <th>{{ macros.toggleOrderParams('app_vacation_index', 'endDate', 'End Date', params) }}</th>                
                <th>{{ macros.toggleOrderParams('app_vacation_index', 'fullName', 'Full Name', params) }}</th>  
                
                <th>{{ 'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for vacation in vacations %}
            <tr>
                <td>{{ vacation.id }}</td>
                <td>{{ vacation.startDate ? vacation.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ vacation.endDate ? vacation.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ vacation.witness ? vacation.witness.fullName : '' }}</td>
                <td>
                    <a href="{{ path('app_vacation_show', {'id': vacation.id}) }}">show</a>
                    <a href="{{ path('app_vacation_edit', {'id': vacation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {% if witness %}
        <a href="{{ path('app_vacation_new', {'id': witness.id}) }}">Create new</a>
   {% else %} 
         <a href="{{ path('app_vacation_new') }}">Create new</a>
   {% endif %}
   
{% endblock %}
