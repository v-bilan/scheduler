{% extends 'base.html.twig' %}

{% block title %}Тиждень від: {{ date }} {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        <a href="{{ path('app_show_task', {year: year, week: week - 1}) }}" aria-label="попередній тиждень"><<</a>
        <strong>{{ date }}</strong>
        <a href="{{ path('app_show_task', {year: year, week: week + 1}) }}" aria-label="наступний тиждень">
            >>
        </a>
    </div>
    <div>
        {% include 'task/_sceduled_data.html.twig' %}
    </div>
    <div>
        <a href="{{ path('app_task', {year: year, week: week}) }}" aria-label="створити розклад">{{ 'Створити розклад' }}</a>
    </div>

{% endblock %}
